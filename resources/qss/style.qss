QWidget {
  background-color: #171d25;
  font-family: Mona Sans;
  font-size: 11pt;
  color: #cacbcd;
}

QLabel#Title {
  color: #5b636a;
  font-size: 9pt;
  border-top-left-radius: 5px;
}

QToolButton {
  border: 0;
}

QToolButton#Close {
  border-top-right-radius: 5px;
}

QPlainTextEdit#AsciiLogo {
  font-family: Consolas;
  font-size: 7pt;
  border: 0;
}

QComboBox {
  background-color: #25272c;
  padding: 1px 18px 1px 3px;
  border-radius: 5px;
}

QComboBox QAbstractItemView {
  background-color: #25272c;
}

QComboBox::drop-down {
  width: 16px;
  border: 0px;
  padding: 1px 3px 1px 18px;
}

QComboBox::down-arrow {
    image: url(resources/dropdown_arrow.png);
    width: 12px;
}

QPushButton {
  background-color: #25272c;
}

QProgressBar {
  background-color: #151619;
  max-height: 4px;
  border: 1px black;
}

QProgressBar::chunk {
  background-color: #245ecf;
}

QTabWidget {
  border: 2px solid #ffffff;
}

QWidget#Tab {
  background-color: #292e37;
}

QGroupBox {
  border: 1px solid #5b636a;
  font-family: Consolas;
  font-size: 9pt;
}

QLineEdit {
  background-color: #1d2026
}

QTextEdit {
  font-family: Consolas;
}
